<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginEnd="42dp"
            android:layout_marginStart="42dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/expandableListView"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-smallcaps"
                android:text="350 P"
                android:textAllCaps="false"
                android:textSize="36sp"
                tools:text="350 P" />


        </RelativeLayout>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:background="@drawable/item_textview_round"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text=" Today"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.052"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <ExpandableListView
            android:id="@+id/expandableListView"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginBottom="54dp"
            android:layout_marginEnd="42dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="42dp"
            android:addStatesFromChildren="false"
            android:animateLayoutChanges="true"
            android:background="@color/white"
            android:divider="@color/grey"
            android:dividerHeight="1dp"
            android:footerDividersEnabled="true"
            android:hapticFeedbackEnabled="false"
            android:headerDividersEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ToggleButton
            android:id="@+id/toggleButtonList"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/tg_list"
            android:layout_width="39dp"
            android:layout_height="38dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/textView2"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintLeft_toRightOf="@+id/toggleButtonGrid"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.92"
            app:layout_constraintTop_toTopOf="parent" />

        <ToggleButton
            android:id="@+id/toggleButtonGrid"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/tg_grid"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.88" />
    </android.support.constraint.ConstraintLayout>


</merge>